@{
    //load file Layout2.cshtml vào đây
    Layout = "~/Views/Shared/Layout1.cshtml";
}
<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-30">
    <!-- Login Form s-->
    <form name="form-login" action="/Account/LoginPost" method="post">
        <div class="login-form">
            @*đăng ký tài khoản thành công thì hiển thị thông tin bên dưới*@
            @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "register-success")
            {
                <div class="alert alert-success">Đăng ký tài khoản thành công, xin mời đăng nhập</div>
            }
            @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "login-invalid")
            {
                <div class="alert alert-danger">
                    Sai tài khoản hoặc mật khẩu
                    <br>
                    Xin mời đăng nhập lại</div>
            }
            <h4 class="login-title">Login to your account</h4>
            <div class="row">
                <div class="col-md-12 col-12 mb-20">
                    <label>Email Address*</label>
                    <input type="text" id="form-login-uname" name="email" placeholder="Type your email address">
                </div>
                <div class="col-12 mb-20">
                    <label>Password</label>
                    <input type="password" id="form-login-pass" name="password" placeholder="************">
                </div>
                <div class="col-md-8">
                    <div class="check-box d-inline-block ml-0 ml-md-2 mt-10">
                        <input type="checkbox" id="remember_me">
                        <label for="remember_me">Remember me</label>
                    </div>
                </div>
                <div class="col-md-4 mt-10 mb-20 text-left text-md-right">
                    <a href="#"> Forgotten pasward?</a>
                </div>
                <div class="col-md-12">
                    <button class="register-button mt-0">Login</button>
                </div>
            </div>
        </div>
    </form>
</div>